<h6></h6>
<h3>Welcome {{name}}</h3>
<p>Plant collections</p>

{{#if plants}}
  <table class="striped">
    <thead>
      <tr>
        <th>Plant Name</th>
        <th>Date</th>
        <th>Status</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {{#each plants}}
        <tr>
          <td><a href="/plants/{{_id}}">{{plantName}}</a></td>
          <td><img class="materialboxed responsive-img circle" width="75" src={{imageurl}}></td>
          <td>{{formatDate createdAt "MMMM Do YYYY, h:mm:ss a"}}</td>
          <td><span class="dash-status">{{status}}</span></td>
          <td>
            <a href="/plants/edit/{{_id}}" class="btn btn-float">
              <i class="fas fa-edit"></i>
            </a>
            <form action="/plants/{{_id}}" method='POST' id='delete-form'>
            <input type="hidden" name="_method" value='DELETE'>
            <button type='submit' class="btn red">
              <i class="fas fa-trash"></i>
            </button>

            </form>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
  <p>You have not added any Plants to your tracker</p>
{{/if}}