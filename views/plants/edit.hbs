<h3>Edit a Plant</h3>
<div class="row">
    <form action="/plants/{{plants._id}}" method="POST" class="col s12">
    <input type="hidden" name="_METHOD" value="PUT">
        <div class="row">
            <div class="input-field">
                <input type="text" id="title" name="title" value='{{plants.title}}'>
                <label for="title">Title</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <select id="status" name="status">
                    {{#select plant.status}}
                    <option value="public" selected>Public</option>
                    <option value="private">Private</option>
                    {{/select}}
                </select>
                <label for="status">Status</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <h5>Tell us about your plant:</h5>
                <textarea id="body" name="body">{{plants.body}}</textarea>
            </div>
        </div>

        <div class="row">
            <input type="submit" value="Save" class="btn">
            <a href="/dashboard" class="btn orange">Cancel</a>
        </div>
    </form>
</div>