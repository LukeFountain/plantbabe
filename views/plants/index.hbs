<h1>Public Plants</h1>
<div class="row">
  {{#each plants}}
    <div class="col s12 m4">
      <div class="card">
        <div class="card-image">
         {{{editIcon user ../user _id}}}
        </div>
        <div class="card-content center-align hoverable ">
          <h5>{{plantName}}</h5>
          <p>{{stripTags (truncate body 150)}}</p>
            <br>
            <a href="/plants/{{_id}}"><img class="materialboxed responsive-img" width="650" src={{imageurl}}></a>
            <div class="chip">
                <img src="{{user.image}}" alt="" >
                <a href="/plants/user/{{user._id}}">{{user.displayName}}</a>
            </div>
        </div>
        <div class="card-action center-align">
            <a href="/plants/{{_id}}" class="btn grey">View More</a>
        </div>
      </div>
    </div>

  {{else}}
    <p>No Plants to display</p>
  {{/each}}

</div>