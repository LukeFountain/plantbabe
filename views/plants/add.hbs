<h3>Add a Plant</h3>
<div class="row">
  <form action="/plants" enctype="multipart/form-data" method="POST" class="col s12">
    <div class="row">
      <div class="input-field">
        <input type="text" id="plantName" name="plantName" required />
        <label for="plantName">Plant Name</label>
      </div>
    </div>

    <div class="row">
      <div class="input-field">
        <select id="status" name="status">
          <option value="public">Public</option>
          <option value="private">Private</option>
        </select>
        <label for="status">Status</label>

<div class="container">
    <div class="row">
      <div class="col-md-6 m-auto">
        <h1 class="text-center display-4 my-4">Plant Upload</h1>
          <div class="custom-file mb-3">
            <input type="file" name="img" id="file" class="custom-file-input">
            <label for="file" class="custom-file-label"></label>
          </div>
      </div>
    </div>

   
        

    <div class="row">
      <div class="input-field">
        <h5>Tell us about your plant:</h5>
        <textarea id="body" name="body" required></textarea>
      </div>
    </div>

    <div class="row">
      <input type="submit" value="Save" class="btn" />
      <a href="/dashboard" class="btn orange">Cancel</a>
    </div>
  </form>
</div>



